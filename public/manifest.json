{
  "name": "Chrome Extension Monitor",
  "description": "Chrome Extension Monitor",
  "version": "1.0",
  "short_name": "extmonitor",
  "author": "Mike Crowe",
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": ["storage"],
  "web_accessible_resources": ["images/*", "css/*", "icons/*"]
}
