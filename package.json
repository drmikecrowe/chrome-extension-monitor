{
  "name": "chrome-extension-monitor",
  "version": "0.1.0",
  "description": "Monitor your Chrome Extension Comments and Reviews",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run clean && NODE_ENV=production webpack --config webpack/webpack.prod.js",
    "release": "pnpm run documentation && pnpm run update-versions && pnpm run clean && pnpm run build && node scripts/compress",
    "compress-keygen": "crx keygen",
    "documentation": "pnpm run documentation:release-notes && pnpm run documentation:documentation",
    "documentation:release-notes": "markdown documentation/ReleaseNotes.md > documentation/ReleaseNotes.html && echo -n \"export const ReleaseNotes = \\`\" > src/ReleaseNotes.ts && cat documentation/ReleaseNotes.html >> src/ReleaseNotes.ts && echo \"\\`;\" >> src/ReleaseNotes.ts",
    "documentation:documentation": "markdown documentation/Documentation.md > documentation/Documentation.html && echo -n \"export const Documentation = \\`\" > src/Documentation.ts && cat documentation/Documentation.html >> src/Documentation.ts && echo \"\\`;\" >> src/Documentation.ts",
    "update-versions": "export VERSION=$(jq -r .version package.json) && jq \".version=\\\"$VERSION\\\"\" src/manifest.json | jq \".version_name=\\\"Release $VERSION\\\"\" > manifest.new && mv manifest.new src/manifest.json && git add src/manifest.json documentation/* src/ReleaseNotes.ts && git commit -m\"Release $VERSION\"; exit 0",
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('pnpm') === -1) { console.log('\u001b[31mPlease use pnpm for installing\u001b[0m'); process.exit(1); }\"",
    "clean": "rimraf build/ dev/ *.zip *.crx",
    "start": "NODE_ENV=development webpack --config webpack/webpack.dev.js --watch"
  },
  "author": "Mike Crowe <drmikecrowe@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drmikecrowe/chrome-extension-monitor.git"
  },
